<div id="history">

    <h3>Historical Readings</h3>

    <hr>

    <div class="row">
        <div class="col-lg-12">

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Date/Time</th>
                        <th>Temperature</th>
                        <th>Soil Moisture</th>
                        <th>Sunlight</th>
                        <th>Soil PH</th>
                        <th>Stored Water</th>
                        <th>Fountain Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="data in gardenData">
                        <td> {{ new Date(data.readingDateTime).toLocaleDateString() + ' ' +  new Date(data.readingDateTime).toLocaleTimeString()  }}
                        </td>
                        <td>{{data.temperature}}&#730;</td>
                        <td>{{data.moistureContent}}</td>
                        <td>{{data.sunlight}}</td>
                        <td>{{data.ph}}</td>
                        <td>{{data.storedWater}} Gallons</td>
                        <td>{{data.fountainStatus}}</td>
                    </tr>

                </tbody>


            </table>

        </div>
    </div>


</div>


<%- exposeLocalsToBrowser() %>